    {
      "name": "Test Scenario - Complete Flow",
      "item": [
        {
          "name": "1. Register New User",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"test_recommender\",\n  \"email\": \"recommender@test.com\",\n  \"password\": \"Test@1234\",\n  \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Step 1: Register a new user for testing"
          }
        },
        {
          "name": "2. Login User",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"recommender@test.com\",\n  \"password\": \"Test@1234\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Step 2: Login and copy JWT token to {{jwt_token}} variable"
          }
        },
        {
          "name": "3. Get Initial Recommendations (No History)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/books/recommendations?limit=10",
              "host": ["{{base_url}}"],
              "path": ["books", "recommendations"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Step 3: Get recommendations (should return trending since no history)"
          }
        },
        {
          "name": "4. Borrow Technology Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": \"{{book_id}}\",\n  \"dueDays\": 14\n}"
            },
            "url": {
              "raw": "{{base_url}}/borrowings",
              "host": ["{{base_url}}"],
              "path": ["borrowings"]
            },
            "description": "Step 4: Borrow a Technology genre book"
          }
        },
        {
          "name": "5. Borrow Science Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": \"another_book_id\",\n  \"dueDays\": 14\n}"
            },
            "url": {
              "raw": "{{base_url}}/borrowings",
              "host": ["{{base_url}}"],
              "path": ["borrowings"]
            },
            "description": "Step 5: Borrow a Science genre book"
          }
        },
        {
          "name": "6. Get Personalized Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/books/recommendations?limit=10",
              "host": ["{{base_url}}"],
              "path": ["books", "recommendations"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Step 6: Get personalized recommendations (should focus on Technology/Science)"
          }
        },
        {
          "name": "7. Get Similar Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/books/recommendations/similar/{{book_id}}?limit=5",
              "host": ["{{base_url}}"],
              "path": [
                "books",
                "recommendations",
                "similar",
                "{{book_id}}"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Step 7: Get similar books to borrowed book"
          }
        },
        {
          "name": "8. Get Explanation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/books/recommendations/explain/{{book_id}}",
              "host": ["{{base_url}}"],
              "path": [
                "books",
                "recommendations",
                "explain",
                "{{book_id}}"
              ]
            },
            "description": "Step 8: Get recommendation explanation"
          }
        }
      ],
      "description": "Complete test scenario: Register → Login → Borrow books → Get personalized recommendations"
    },
