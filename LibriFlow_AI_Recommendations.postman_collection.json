{
  "info": {
    "name": "LibriFlow - AI Recommendations",
    "description": "Test collection for AI-powered book recommendation system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "book_id",
      "value": "book_id_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get Recommendations (Logged In)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/books/recommendations?limit=10",
          "host": ["{{base_url}}"],
          "path": ["books", "recommendations"],
          "query": [
            {
              "key": "limit",
              "value": "10",
              "description": "Number of recommendations to return"
            }
          ]
        },
        "description": "Get personalized recommendations for logged-in user. Uses hybrid algorithm combining genre preferences, collaborative filtering, trending, and highly rated books."
      },
      "response": []
    },
